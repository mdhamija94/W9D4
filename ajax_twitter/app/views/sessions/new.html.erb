<div class="page-header">
  <h1>Log in</h1>
</div>

<ul>
<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
<% end %>
</ul>

<form action="/session" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label class="text-input-container" for="user_username">Username
    <input class="text-input" type="text" name="user[username]" id="user_username">
  </label>

  <label class="text-input-container" for="user_password">Password
    <input class="text-input" type="password" name="user[password]" id="user_password">
  </label>

  <input class="button" type="submit" value="Log in!">
</form>

<p class="subtext"> 
  <a href="<%= new_user_url %>">Don't have an account? Sign up here</a>
</p>
